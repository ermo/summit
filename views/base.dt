doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet", href="https://unpkg.com/@tabler/core@1.0.0-beta9/dist/css/tabler.min.css")
        block title
            title Under construction

    body
        // Top navigation
        nav.navbar.navbar-dark.bg-primary
            a.navbar-brand.px-2
                img(src="https://serpentos.com/img/white_notext_0.5x.png", height="75%")
                span.px-2 Summit

        div.container-fluid
            div.row
                nav.col-md-2.pt-3
                    div.sidebar-sticky
                        ul.nav.flex-column
                            h4 Navigation
                            li.nav-item
                                a.nav-link.active(href="#") Home
                            li.nav-item: a.nav-link(href="#") Builds
                            h4.py-2 Documentation
                            li.nav-item: a.nav-link(href="#") Packaging
                            li.nav-item: a.nav-link(href="#") Important stuff

                main.pt-3.col-md-9.col-lg-10(role="main")
                    block notifications

                    div.card
                        div.card-body.pt-3
                            block content

    // Minified tabler JS 
    script(src="https://unpkg.com/@tabler/core@1.0.0-beta9/dist/js/tabler.min.js")